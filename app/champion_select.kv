#:kivy 2.0.0

<ChampionButton>
    canvas.before:
        Color:
            rgba: self.border_color
        Line:
            width: 4
            rectangle: self.x, self.y, self.width, self.height

<ChampionArray>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            # width: 2
            rectangle: self.x, self.y, self.width, self.height
<SearchBar>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<ChampionSelectInterface>:
    orientation: 'horizontal'

    BoxLayout:
        padding: "0dp", "10dp", "0dp", "10dp"
        orientation: "vertical"

        SearchBar:
            text: "Search Bar"
            on_text: champion_select.update_list(self.text.lower())
            on_touch_down: self.clear()
            size_hint: 0.9, None
            size: "40dp", "40dp"
            pos_hint: {'center_x': 0.5}
            halign: 'center'

        ScrollView:
            ChampionSelect:
                id: champion_select
                size_hint: 1, None
                padding: "20dp", "20dp", "20dp", "20dp"
                spacing: "10dp", "10dp"
                height: self.minimum_height

    ChampionSelectUI:
        id: ui
        orientation: 'vertical'

        GridLayout:
            cols: 2

            Button:
                id: ban_button
                text: "ban"
                font_size: 20
                on_press: ui.ban_champion(champion_select.champion)

            Button:
                id: clear_bans_button
                text: "clear bans"
                font_size: 20
                on_press: ui.clear_bans()

            Button:
                id: pick_button
                text: "pick"
                font_size: 20
                on_press: ui.pick_champion(champion_select.champion)

            Button:
                id: clear_picks_button
                text: "clear picks"
                font_size: 20
                on_press: ui.clear_picks()

