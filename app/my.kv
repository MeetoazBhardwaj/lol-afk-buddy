#:kivy 2.0.0

<MyGridLayout>:
    name: name
    surname: surname
    age: age
    tb: target_button
    sl: color_slider

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Surname"
            TextInput:
                id: surname
                multiline: False
            
            Label:
                text: "age"
            TextInput:
                id: age
                multiline: False
        
        Button:
            id: target_button
            text: "Submit"
            font_size: 32
            on_press: root.foo()
            background_normal: ''
            background_color: (1, 0, 0, 1)
        
        Button:
            text: "Reset color to default value"
            font_size: 32
            on_press: root.reset_color_to_default()
        
        Button:
            text: "Switch color control"
            font_size: 32
            on_press: root.switch_color_control()
        
        Slider:
            id: color_slider
            min: 0
            max: 120
            step: 1
            orientation: 'horizontal'

            Label:
                text: str(color_slider.value)
